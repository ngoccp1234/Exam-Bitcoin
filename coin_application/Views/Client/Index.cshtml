@model IEnumerable<coin_application.Models.Coin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Coin</h2>
<br />
<div class="row ">
    <div class="col-md-5">
        @using (Html.BeginForm("Index", "Client", FormMethod.Get))
        {
            <p>
                Search: @Html.TextBox("SearchString")  
                <input type="submit" value="Search" /></p>
        }
    </div>
    <div class="col-md-5"></div>
    <div class="col-md-2">
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" 
                    aria-haspopup="true"
                    aria-expanded="false">
                Market
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                
                @foreach (var mark in Model)
                {
          
@*                     <li><a href="@mark.MarketId">@mark.Market.MarketName</a></li>      *@
@*                     <li>@Html.ActionLink(mark.Market.MarketName,"ByMarket",new {mark.MarketId},null)</li>      *@
                    <li><a href="/Client/ByMarket/@mark.MarketId">@mark.Market.MarketName</a></li>     
                             
               
                }
            </ul>
        </div>
        
    
    </div>
</div>
<br />

 

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Market.MarketName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoinName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BaseAsset)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuoteAsset)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volume24h)
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Market.MarketName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoinName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BaseAsset)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuoteAsset)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volume24h)
        </td>
        <td>
        </td>
    </tr>
}

</table>
